page{
  background: #5ED3FF;
  display: flex;
  align-items: center;
}

.awardView{

  width:450rpx;
  height:363rpx;
  display: flex;
  position: relative;
  align-items: center;
  flex-direction: column;
}
.awardImg{
  position: absolute;
  width:371rpx;
  height:300rpx;
  z-index:1;
}
.score{
  height:150rpx;
  width:250rpx;
  text-align: center;
  line-height: 150rpx;
  font-size: 120rpx;
  color:white;
  margin-top: 40rpx;
  z-index:2;
}
.awardLevel{
  height:60rpx;
  width:250rpx;
  text-align: center;
  line-height: 60rpx;
  color:white;
  margin-top: 0rpx;
  z-index:2;
}
.cap{
  
  margin-top: -20rpx;
  width:120rpx;
  height:120rpx;
}
.title{
  width:320rpx;
  height:100rpx;
  margin-top: 5rpx;
  line-height: 100rpx;
  color:white;
  font-size: 60rpx;
  background: #37AEDA;
  text-align: center;
  border-radius: 50rpx;
}
.titleTxt{
  margin-top: 30rpx;
  color:white;
  font-size:40rpx;
  margin-bottom: 20rpx;
}
.line{

  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  width:100%;
}
.one{

  color:white;
  width:30%;
  height:60rpx;
  line-height: 60rpx;
  text-align: right;
  padding-right: 20rpx;
  font-size:44rpx;
}
.two{

  color:white;
  width:70%;
  height:60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
  font-size:44rpx;
}
.container{
  margin-top: 50rpx;
  width: 100%;
  height: 600rpx
}
#mycanvas{
  width: 100%;
  height: 600rpx;
 
}
.shareView{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.saveBtn{
  
  border-radius: 40rpx;
  height:80rpx;
  line-height: 80rpx;
  width:300rpx;
  color:white;
  border-style: solid;
  border-color: white;
  border-width: 2rpx;
  text-align: center;
  font-size:36rpx;
}

.homeIcon{
  width:80rpx;
  height:80rpx;
  margin-top:50rpx;
  margin-bottom: 50rpx;
}
#downCanvas{
  
  position: fixed;
  left:-750rpx;
  top:0rpx;
  width:750rpx;
  height:2000rpx;
  z-index:-2;

}
#shareCanvas{
  position: fixed;
  left:-750rpx;
  top:0rpx;
  width:750rpx;
  height:600rpx;
  z-index:-3;

}
.sharebtn::after {
  border: none;
}
.btn-share {

  width: 300rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-left: 50rpx;
  color:#37AEDA;
  background-color: white;
  display: flex;
  font-size:36rpx;
  justify-content: center;
  align-items: center;
}
.shareContainer{
  display: flex;
  width: 300rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #fff;
  margin-left: 50rpx;
 
}
.shareBtn{

  border-radius: 40rpx;
  height:80rpx;
  line-height: 80rpx;
  width:300rpx;
  color:#37AEDA;
  background: white;
  text-align: center;
  margin-left: 50rpx;
}